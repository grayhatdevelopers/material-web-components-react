  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@swc/core": "^1.7.0",
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "tiny-glob": "^0.2.9",
    "tsup": "^8.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@lit-labs/ssr-react": "^0.3.0",
    "@lit/react": "^1.0.5",
    "@material/web": "^1.5.1",
    "react": "^18.2.0"
  }
}
