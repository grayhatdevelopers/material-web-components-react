{
  "name": "material-web-components-react",
  "version": "0.3.9",
  "author": "Grayhat Team",
  "type": "module",
  "keywords": [
    "react",
    "react-component",
    "web-components",
    "material",
    "material-ui",
    "material design"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/grayhatdevelopers/material-web-components-react",
    "directory": "packages/ui"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/grayhatdevelopers/material-web-components-react/issues"
  },
  "homepage": "https://material-web-components-react.grayhat.studio",
  "publishConfig": {
    "access": "public",
    "directory": "./dist"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "build": "tsup",
    "postbuild": "cp ../../*.md . && cp ./*.md ./dist && cp package.json ./dist",
    "dev": "tsup --watch",
    "release": "build && cd dist && npx changeset publish"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@swc/core": "^1.7.0",
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "postcss": "^8",
    "tiny-glob": "^0.2.9",
    "tsup": "^8.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@lit/react": "^1.0.5",
    "@material/web": "^2.0.0",
    "autoprefixer": "^10.4.19",
    "lit": "^3.2.0",
    "react": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-swipeable": "^7.0.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.3",
    "vaul": "^0.9.1"
  }
}
